<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65"
        android:background="@color/colorDarkBlue">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:id="@+id/iv_back"
            android:layout_marginBottom="@dimen/dimen_15"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_15"
            android:text="Send Message"
            android:fontFamily="@font/arial"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="To:"
        android:id="@+id/tv_to"
        android:textColor="#7895B6"
        android:fontFamily="@font/arial"
        android:layout_below="@+id/rl_toolbar"
        android:layout_marginLeft="@dimen/dimen_20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_to"
        android:layout_below="@+id/rl_toolbar"
        android:textColor="#7895B6"
        android:id="@+id/tv_to_name"
        android:fontFamily="@font/arial"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="Brooklyn Indain Motorcycle"
        android:layout_marginLeft="@dimen/dimen_5"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_to_name"
        android:background="@drawable/ic_send_message_bg"
        android:layout_marginTop="@dimen/dimen_15"
        android:fontFamily="@font/arial"
        android:hint="Write a message..."
        android:gravity="top"
        android:id="@+id/et_tv_message"
        android:paddingTop="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_20"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7895B6"
        android:layout_alignParentBottom="true"
        android:text="Send"
        android:fontFamily="@font/arial"
        android:textAllCaps="false"
        android:id="@+id/btn_send"
        android:textColor="@color/colorWhite"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/rl_cover_image"
                android:background="@drawable/ic_prf_bg">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/iv_cover"/>
                <ImageView
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@drawable/ic_back"
                    android:id="@+id/iv_back"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Details"
                    android:textStyle="bold"
                    android:fontFamily="@font/arial"
                    android:id="@+id/tv_profile_details"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cover_image"
                    android:layout_marginBottom="@dimen/dimen_65"
                    android:layout_below="@+id/tv_profile_details"
                    android:text="Change Cover Image"
                    android:fontFamily="@font/arial"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/dimen_34"/>

            </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_profile_image"
        android:layout_below="@id/rl_cover_image"
        android:background="@drawable/ic_profile_pic"
        android:layout_marginTop="-50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Picture"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:id="@+id/tv_upload_pic"
        android:layout_below="@+id/iv_profile_image"
        android:textColor="#414A66"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/et_first_name"
        android:hint="First name"
        android:textSize="@dimen/text_size_12"
        android:background="@drawable/ic_input_bg"
        android:layout_below="@+id/tv_upload_pic"
        android:paddingLeft="@dimen/dimen_15"
        android:fontFamily="@font/arial"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/et_last_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_input_bg"
        android:layout_below="@+id/et_first_name"
        android:layout_marginTop="@dimen/dimen_15"
        android:hint="Last name"
        android:textSize="@dimen/text_size_12"
        android:fontFamily="@font/arial"
        android:paddingLeft="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/et_mobile"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_input_bg"
        android:layout_below="@+id/et_last_name"
        android:layout_marginTop="@dimen/dimen_15"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textSize="@dimen/text_size_12"
        android:fontFamily="@font/arial"
        android:paddingLeft="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@color/colorLightBlue"
        android:text="Next"
        android:fontFamily="@font/arial"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/colorWhite" />


</RelativeLayout>
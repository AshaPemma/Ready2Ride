<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:id="@+id/iv_home"
        android:src="@drawable/ic_tower"
        android:layout_marginTop="@dimen/dimen_8"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_home"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:textColor="#414A66"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/tv_header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_months"
            android:text="every 0 "
            android:fontFamily="@font/arial"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/tv_header"
            android:textSize="@dimen/text_size_12"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_rectangle_blue_btn_bg"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/arial"
            android:textAllCaps="false"
            android:id="@+id/btn_schedule"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="Schedule"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_months"
            android:id="@+id/ll_last"
            android:orientation="horizontal"
            android:weightSum="1.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Last:"
                android:fontFamily="@font/arialbd"
                android:id="@+id/tv_last"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="center_horizontal"
                android:textColor="#323A55"
                android:textSize="@dimen/text_size_12"
                android:layout_marginLeft="@dimen/dimen_5"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Suggested"
                android:fontFamily="@font/arialbd"
                android:gravity="center_horizontal"
                android:id="@+id/tv_suggested"
                android:layout_below="@+id/tv_months"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Reminder"
                android:fontFamily="@font/arialbd"
                android:gravity="center_horizontal"
                android:id="@+id/tv_reminder"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_10"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_last"
            android:id="@+id/ll_desc"
            android:weightSum="1.5"
            android:layout_marginTop="@dimen/dimen_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="11/19/2019"
                android:fontFamily="@font/arial"
                android:id="@+id/tv_last_desc"
                android:layout_below="@+id/tv_last"
                android:textSize="@dimen/text_size_10"
                android:gravity="center_horizontal"
                android:textColor="#323A55"/>



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="10.4443 mi"
                android:layout_toRightOf="@+id/tv_last"
                android:layout_below="@+id/tv_suggested"
                android:textColor="#323A55"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_10"
                android:fontFamily="@font/arial"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100 mi"
                android:layout_below="@+id/tv_suggested"
                android:layout_weight="0.5"
                android:textColor="#323A55"
                android:fontFamily="@font/arial"
                android:id="@+id/tv_reminder_des"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_10"
                android:layout_centerHorizontal="true" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_desc"
            android:layout_marginTop="@dimen/dimen_4"
            android:background=" #CCCCCC"></View>
    </RelativeLayout>



</RelativeLayout>
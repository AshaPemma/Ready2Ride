<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:id="@+id/iv_home"
        android:src="@drawable/ic_gas_blue"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_15"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_home"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kawasaki Route 4"
            android:fontFamily="@font/arial"
            android:textStyle="bold"
            android:id="@+id/tv_dealer_name"
            android:layout_marginTop="@dimen/dimen_12"
            android:textColor="#414A66"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textStyle="bold"
            android:id="@+id/tv_min"
            android:maxLength="4"
            android:textSize="@dimen/text_size_22"
            android:fontFamily="@font/arial"
            android:textColor="#414A66"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="miles away"
            android:textColor="#414A66"
            android:id="@+id/tv_min_away"
            android:fontFamily="@font/arial"
            android:layout_below="@+id/tv_min"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_4"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_min_away"
            android:layout_marginTop="@dimen/dimen_4"
            android:background=" #CCCCCC"></View>
    </RelativeLayout>

</RelativeLayout>
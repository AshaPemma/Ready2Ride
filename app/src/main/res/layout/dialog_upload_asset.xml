    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_34"
        android:layout_marginLeft="@dimen/dimen_34"
        android:id="@+id/rl_capture_image">
        <ImageView
            android:layout_width="@dimen/dimen_34"
            android:layout_height="@dimen/dimen_34"
            android:src="@drawable/ic_cameraa"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:gravity="center_horizontal|center"
            android:fontFamily="@font/arial"
            android:layout_centerHorizontal="true"
            android:text="Capture Image"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_capture"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGrey"
        android:layout_below="@+id/rl_capture_image"
        android:layout_marginTop="@dimen/dimen_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dimen_34"
        android:layout_marginLeft="@dimen/dimen_34"
        android:id="@+id/rl_upload_gallery"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_below="@+id/view_capture">
        <ImageView
            android:layout_width="@dimen/dimen_34"
            android:layout_height="@dimen/dimen_34"
            android:src="@drawable/ic_galleryy"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:gravity="center_horizontal|center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arial"
            android:text="Upload from Gallery"/>
    </RelativeLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="false"
    android:layout_marginBottom="@dimen/dimen_3"
    android:layout_marginTop="@dimen/dimen_3"
    android:background="#F2F2F2"
    app:cardBackgroundColor="#F2F2F2"
    android:clickable="true">
    <ImageView
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_30"
        android:id="@+id/iv_home"
        android:layout_marginLeft="@dimen/dimen_8"
        android:src="@drawable/ic_featured_groups_bg"
        android:layout_marginTop="@dimen/dimen_18"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/dimen_4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brooklyn Indian Motorcycles"
            android:id="@+id/tv_name"
            android:layout_marginRight="@dimen/dimen_24"
            android:fontFamily="@font/arial"
            android:layout_marginTop="@dimen/dimen_12"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="124 Varic St. Brooklyn, NY 10012"
            android:id="@+id/tv_name_desc"
            android:textSize="10dp"
            android:fontFamily="@font/arial"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_change"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check_circle_green"
            android:layout_marginRight="@dimen/dimen_10"
            android:textSize="@dimen/text_size_12"
            android:fontFamily="@font/arialbd"
            android:textColor="@color/colorDarkBlue"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_name_desc"
            android:layout_marginTop="@dimen/dimen_8"
            android:background=" #CCCCCC"></View>
    </RelativeLayout>


</android.support.v7.widget.CardView>
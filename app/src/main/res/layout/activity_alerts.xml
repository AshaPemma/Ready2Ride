<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65"
        android:background="@color/colorDarkBlue">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_15"
            android:id="@+id/iv_back"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_15"
            android:text="Alerts"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_new_alert"
        android:background="@drawable/ic_rectangle_blue_btn_bg"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_15"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:layout_below="@+id/rl_toolbar"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="Create New Alert"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Alerts"
        android:fontFamily="@font/arial"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_below="@+id/btn_new_alert"
        android:layout_marginLeft="@dimen/dimen_15"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/text_size_10"
        android:id="@+id/tv_alerts"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_alerts"
        android:layout_below="@+id/tv_alerts"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_15"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
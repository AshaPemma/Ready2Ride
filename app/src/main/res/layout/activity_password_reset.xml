<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/iv_logo"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/dimen_75"
        android:layout_centerHorizontal="true"/>


        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:imeOptions="actionDone"
            android:drawablePadding="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@drawable/ic_input_bg"
            android:layout_below="@+id/et_password"
            android:fontFamily="@font/arial"
            android:layout_marginTop="@dimen/dimen_10"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_5"
            android:drawableLeft="@drawable/ic_password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/ic_input_bg"
            android:imeOptions="actionNext"
            android:drawablePadding="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_below="@+id/iv_logo"
            android:paddingLeft="@dimen/dimen_5"
            android:fontFamily="@font/arial"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_blue"
        android:id="@+id/btn_reset"
        android:text="reset"
        android:fontFamily="@font/arial"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/et_confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_need_cpm"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorGrey"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_65" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:fontFamily="@font/arial"
        android:id="@+id/tv_create_account"
        android:layout_toRightOf="@+id/tv_need_cpm"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="@color/app_theme_color"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_15"/>
    <View
        android:id="@+id/view_pwd"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGrey"
        android:layout_above="@+id/tv_create_account"
        android:layout_marginBottom="@dimen/dimen_15"/>
</RelativeLayout>
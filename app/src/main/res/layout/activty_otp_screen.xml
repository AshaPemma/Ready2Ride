<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/iv_logo"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/dimen_48"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification..."
        android:textStyle="bold"
        android:fontFamily="@font/arial"
        android:id="@+id/tv_verification"
        android:textSize="30sp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please check your Email Inbox for the password reset OTP "
        android:id="@+id/tv_please_check"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:layout_below="@+id/tv_verification"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginLeft="@dimen/dimen_24"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dimen_12"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP"
        android:id="@+id/tv_otp"
        android:fontFamily="@font/arial"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/tv_please_check"
        android:layout_marginTop="@dimen/dimen_20"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_below="@+id/tv_otp"
        android:weightSum="6"
        android:id="@+id/ll_otp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_height="@dimen/dimen_50"
            android:fontFamily="@font/arial"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/et_otp_one"
            android:imeOptions="actionNext"
            android:background="@drawable/ic_otp_rect"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:inputType="number"
            android:id="@+id/et_otp_two"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/ic_otp_rect"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_5"
            android:fontFamily="@font/arial"
            android:imeOptions="actionNext"
            android:id="@+id/et_otp_three"
            android:layout_marginRight="@dimen/dimen_5"
            android:gravity="center"
            android:background="@drawable/ic_otp_rect"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_5"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/arial"
            android:imeOptions="actionDone"
            android:id="@+id/et_otp_four"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/ic_otp_rect"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_5"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:id="@+id/et_otp_five"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/ic_otp_rect"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_5"
            android:maxLength="1"
            android:fontFamily="@font/arial"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:id="@+id/et_otp_six"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/ic_otp_rect"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:textColor="@color/app_theme_color"
        android:id="@+id/tv_Resend"
        android:fontFamily="@font/arial"
        android:layout_below="@+id/ll_otp"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_blue"
        android:id="@+id/btn_verify"
        android:text="verify"
        android:fontFamily="@font/arial"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/tv_Resend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_24"/>

</RelativeLayout>
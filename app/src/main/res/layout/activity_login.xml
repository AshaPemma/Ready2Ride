<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:id="@+id/iv_logo"
        android:src="@drawable/ic_logo_signin"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/et_email"
        android:hint="Email address"
        android:fontFamily="@font/arial"
        android:background="@drawable/ic_input_bg"
        android:layout_below="@+id/iv_logo"
        android:paddingLeft="@dimen/dimen_20"
        android:textSize="@dimen/text_size_12"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_input_bg"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="@dimen/dimen_15"
        android:hint="Password"
        android:inputType="textPassword"

        android:textSize="@dimen/text_size_12"
        android:fontFamily="@font/arial"
        android:paddingLeft="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/btn_login"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@drawable/ic_button_blue"
        android:text="Log in"
        android:textStyle="bold"
        android:fontFamily="@font/arial"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/dimen_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:fontFamily="@font/arial"
        android:id="@+id/tv_forgot_password"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_24"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/btn_facebook"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="@dimen/dimen_65"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@drawable/ic_button_facebook"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_30"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/dimen_24"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/btn_google"
        android:layout_below="@+id/btn_facebook"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@drawable/ic_googlee"
        android:gravity="center"
        android:paddingRight="@dimen/dimen_30"
        android:paddingLeft="@dimen/dimen_10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/dimen_24"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_24"
        android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_not_mem"
        android:text="Not yet a member? "
        android:fontFamily="@font/arial"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sign_up"
        android:text="Sign up"
        android:fontFamily="@font/arial"
        android:layout_toRightOf="@+id/tv_not_mem"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_24" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_main_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_16"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_65">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_logof"
                    android:visibility="gone"
                    android:src="@drawable/ic_onboard_logo"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_header_mainf"
                    android:text="Bike Stuff"
                    android:textColor="@color/colorWhite"
                    android:textSize="48sp"
                    android:visibility="gone"
                    android:fontFamily="@font/arial"
                    android:layout_marginTop="100dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_descpf"
                    android:visibility="gone"
                    android:fontFamily="@font/arial"
                    android:text="Loreum ipsim dolor sit amet, consectituter adipscing edit. Sed volutpatligula quis sed volupati dabitat facilisisis"
                    android:textSize="@dimen/text_size_14"
                    android:layout_below="@+id/tv_header_main"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_24"
                    android:layout_marginLeft="@dimen/dimen_24"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>


            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/footer_control_group_indicator"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center|bottom"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:layout_margin="@dimen/dimen_12"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16">

            <ImageView
                android:id="@+id/footer_control_indicator_1"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:src="@drawable/indicator_selected" />

            <ImageView
                android:id="@+id/footer_control_indicator_2"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_footer_oval" />

            <ImageView
                android:id="@+id/footer_control_indicator_3"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_footer_oval" />
            <ImageView
                android:id="@+id/footer_control_indicator_4"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:src="@drawable/ic_footer_oval" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_member"
            android:text="Already a member? "
            android:fontFamily="@font/arial"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_above="@+id/footer_control_group_indicator"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_login"
            android:text="Log In"
            android:fontFamily="@font/arial"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tv_member"
            android:layout_above="@+id/footer_control_group_indicator"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup"
            android:layout_above="@+id/tv_login"
            android:background="@drawable/ic_button_blue"
            android:layout_marginBottom="@dimen/dimen_10"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="Sign up"/>



    </RelativeLayout>
</RelativeLayout>